{
  "name": "@limaskap/api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "build": "tsc && tsc-alias",
    "_drizzle:build": "tsc --outDir .drizzle-tmp",
    "_drizzle:clean": "rm -rf .drizzle-tmp",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "db:seed": "tsx src/db/seed.ts",
    "typecheck": "tsc --noEmit",
    "test": "node -e \"console.log('No tests configured for @limaskap/api')\""
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "@hono/zod-openapi": "^1.1.0",
    "@logtail/pino": "^0.5.6",
    "@neondatabase/serverless": "^1.0.1",
    "@scalar/hono-api-reference": "^0.9.13",
    "better-auth": "^1.3.5",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.0",
    "hono-pino": "^0.10.1",
    "pg": "^8.16.3",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "stoker": "^2.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
